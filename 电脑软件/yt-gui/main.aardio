phxz=function(){

	//ph 视频 分辨率 
	
	
	
	if(mainForm.ph_720p.checked == true){
		
		//720/480p
		return  " -f 720p/480p ";
	}
	 
	if(mainForm.ph_1080P.checked == true){
		
		//1080p
		return  " -f hls-2408-0 ";
	}
	  	
}

